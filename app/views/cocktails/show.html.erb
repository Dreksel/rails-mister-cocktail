<h1><%= @cocktail.name %></h1>
<% @cocktail.ingredients.each do |i| %>
<p><%= i.name %></p>
<% end %>

<%= link_to 'Back', cocktails_path %>

<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.submit 'Create ingredient' %>
<% end %>
